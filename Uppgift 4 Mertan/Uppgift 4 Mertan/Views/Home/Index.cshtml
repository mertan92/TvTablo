@model IEnumerable<Uppgift_4_Mertan.Models.db.Programs>

@{
    ViewBag.Title = "Home Page";
}



<h2 style="color:#a30707">Missa inte idag @Model.ElementAt(0).Date!</h2>
<hr />
<div class="form-horizontal">
    @foreach (var item in Model)
    {
        if (item.Id == 14 || item.Id == 26 || item.Id == 41 || item.Id == 74)
        {
            <h3> @item.Time  <text style="color:#ff0000">@item.Channels.Name </text>   @item.Title   @Html.ActionLink("Läs mer", "Details", new { id = item.Id })</h3>
        }
    }

    <hr />
    <h2 style="color:#a30707">På TV NU!</h2>


