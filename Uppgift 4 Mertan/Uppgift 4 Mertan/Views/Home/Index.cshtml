    <table class="table-hover table-bordered"> 
        @foreach (var prog in Model)
        {
            if (prog.Time <= DateTime.Now.TimeOfDay)
            {
                if (prog.ChannelId == 1)
                {
                    <tr>
                        <td class="col-md-3">@prog.Time</td>
                        <td class="col-md-3 col-md-offset-3">@prog.Title</td>
                        <td class="col-md-3 col-md-offset-3">@Html.ActionLink("Dagens program för SVT 1", "KanalProgram", new { linkText = "ProgramSVT1" }, null)</td>
