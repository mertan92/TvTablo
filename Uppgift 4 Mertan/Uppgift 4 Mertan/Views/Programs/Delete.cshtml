        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Ta bort" class="btn btn-default" /> |
            @if (Model.Id < 76)
            {
                @Html.ActionLink("Tillbaka till listan med programmen", "Index")
            }
            else
            {
                @Html.ActionLink("Tillbaka till listan med nyhetspuffar", "IndexPuffar")
